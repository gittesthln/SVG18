\newcommand{\ListAttribs}[3]{%
  \begin{table}[ht]
     \label{#1}\caption{#2}%
    \begin{center}
      \begin{tabular}[t]{|c|c|c|}
        \hline
        属性名& 意味& 属性値\\\hline
       \ShowExp#3\relax\relax\relax
      \end{tabular}
    \end{center}
  \end{table}
}
